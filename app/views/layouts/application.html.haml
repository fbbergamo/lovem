%head
	%meta{ :charset => "utf-8" }
	= csrf_meta_tags
	%meta{ :http => { :equiv => "X-UA-Compatible" }, :content => "IE=edge,chrome=1" }
	%meta{ name: 'robots', content: "index, follow"}
	%title= "Love M test"
	%meta{ :name => "author", :content => "fbbergamo" }
	%meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
	= stylesheet_link_tag "application", :media => "all"
	= javascript_include_tag "application"
	

%body{ :class => "#{params[:controller]} #{params[:action]}", itemscope: true, itemtype: "http://schema.org/WebPage" }
	%header
		%nav#menu.navbar.navbar-default{ role: "navigation" }
			.container
				.navbar-header
					%button.navbar-toggle{ data: { toggle: "collapse", target: "#menu-items" } }
						%span.sr-only Abrir/fechar navegação
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					= link_to root_path, class: "navbar-brand" do
						%span LoveMTest
				#menu-items.collapse.navbar-collapse
					.nav.navbar-nav.navbar-right
						= form_tag(search_twittes_path, remote: true, method: :get, class: "navbar-form") do
							= search_field_tag :q, nil, placeholder: "Search", value: params[:q]
							= button_tag class: 'menu-search-form-submit' do
								%span.glyphicon.glyphicon-search
	.container
		.row.list-all-tweets
			= yield
</html>